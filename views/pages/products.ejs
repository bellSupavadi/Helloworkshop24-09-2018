<% include ../partials/header %>
<div class="jumbotron">
  <center> <h1>PRODUCT</h1></center> 
 <br>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tittle</th>
            <th>Price</th>
            <th>Edit</th>
           
            <th><a  class="btn btn-success" href="/insert_product" role="button">New Product</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
     <% products.forEach(function(product){ %>
        <tr>
            <td scope="row"><%= product.product_id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a name="" id="" class="btn btn-info" href="/products/<%= product.product_id %>" role="button">Edit</a></td>
            
           
        </tr>
      <% }); %>
    </tbody>
</table>
</div>
<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>
