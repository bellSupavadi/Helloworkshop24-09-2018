<% include ../partials/header %>
<h2>Filterable Table</h2>
  <p>Type something in the input field to search the table for first names, last names or emails:</p>  
  <input class="form-control" id="myInput" type="text" placeholder="Search..">
  <script language="JavaScript">
        function chkConfirm(){
          if(confirm('Do you want to delete product')==true){
            window.location = "/products/<%= product.id %>";
            
         }else{
          return(null);
        }
      }
      </script>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tittle</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
            <th><a  class="btn btn-danger" href="/insert" role="button">New Product</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
     <% products.forEach(function(product){ %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a name="" id="" class="btn btn-danger" href="/products/<%= product.id %>" role="button">Edit</a></td>
            
            <td><a name="btnConfirm" value="Confirm" OnClick="chkConfirm()" class="btn btn-danger" href="/product_delete/<%= product.id %>" role="button">DELETE</a></td>
        </tr>
      <% }); %>
    </tbody>
</table>

<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>




