 <% include ../partials/header %>

 <center> <h1>USERS</h1></center> 

 <br>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Password</th>
            <th><a  class="btn btn-danger" href="/insert_user" role="button">New User</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
     <% users.forEach(function(user){ %>
        <tr>
            <td scope="row"><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a name="" id="" class="btn btn-danger" href="/users/<%= user.id %>" role="button">Edit</a></td>
            
            <td><a name="btnConfirm" value="Confirm"  class="btn btn-danger" href="/user_delete/<%= user.id %>" onclick="return confirm('Are you sure you want to delete?')"role="button">DELETE</a></td>
        </tr>
      <% }); %>
    </tbody>
</table>

<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>
    




