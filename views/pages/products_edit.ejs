<% include ../partials/header %>
  
  <form action ="/products/update" method ="post">
    <div class="jumbotron">
      <center>  <h4>PRODUCT EDIT</h4></center>
        <br>
  <div class="form-group">
    <label for="">Product ID</label>
    <input  type="number"
    class="form-control" name="id" id="" aria-describedby="helpId" placeholder=""value="<%= product.product_id %>" disabled>
    <input type="hidden" value="<%= product.product_id %>"id="custId" name="id" >
    <!-- <small id="helpId" class="form-text text-muted">Product ID</small> -->
  </div>

<div class="form-group">
    <label for="">Product Name</label>
    <input type="text"
      class="form-control" value ="<%= product.title %>"name="title" id="" aria-describedby="helpId" placeholder="">
    <!-- <small id="helpId" class="form-text text-muted">Product</small> -->
  </div>

<div class="form-group">
    <label for="">Product Price</label>
    <input type="number"
      class="form-control" value = "<%= product.price %>"name="price" id="" aria-describedby="helpId" placeholder="">
    <!-- <small id="helpId" class="form-text text-muted">Product price</small> -->
  </div>

  <div class="form-group">
    <label for="">Create At</label>
    <input type="text"
    class="form-control" value="<%= time %>" id="" aria-describedby="helpId" placeholder="" disabled>
    <input type="hidden" value="<%= time %>"id="custId" name="time" >
    <!-- <small id="helpId" class="form-text text-muted">create at</small> -->
  </div>
<br>
<center><button type=" " class="btn ">Cancer</button>
  <button type="submit" class="btn btn-success">Save</button>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" role="button" >DELETE</button></center>

</div>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"> Confirm Delete </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body"> Do you want to delete user ? </div>
        <div class="modal-footer">
          
          <button type="button" class="btn btn-secondary" data-dismiss="modal"> CANCLE </button>
          <a name="" id="" class="btn btn-primary" href="/product_delete/<%= product.product_id %>" role="button"> DELETE </a>
        </div>
      </div>
    </div>
  </div>


 <% include ../partials/footer %>